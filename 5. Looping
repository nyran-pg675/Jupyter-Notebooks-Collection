# Looping
# while loop
count = 1

while count<=5:
 print(f"count is:{count}")
 count += 1

 #For loop

 fruits = ['apple','banana','cherry','orange']
for item in fruits:
   print(item)

for letter in 'Nyran Abraham Tahija':
   print(letter)
print("-----------------------------")


# Range function
#range(start, end, step)

for i in range(1,10): 
   print(i)

# break the loop
print("----------------------------")
for i in range(1, 10):
   if i == 5:
    break
   print(i)

# Continue statement
for i in range(1, 10):
   if i == 5:
    continue
   print(i) 

#nested loop

for i in range(1, 10):
  for j in range(1, 10):
    print(f"i={i}, j={j}")

#example
number = int(input("Enter a number: "))

for i in range(1, 5):
   print(f"{number} * {i} = {number*i}")
