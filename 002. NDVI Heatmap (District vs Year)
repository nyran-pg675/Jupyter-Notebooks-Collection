# Import libraries
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load the dataset
file_path = "DistrictWise_meanNDVI_2005_2024_NoGeometry.csv"
df = pd.read_csv(file_path)

# Filter relevant columns
ndvi_data = df[['LOCATION', 'year', 'mean']]

# Pivot the data to create a matrix: rows = district, columns = year
heatmap_data = ndvi_data.pivot(index='LOCATION', columns='year', values='mean')

# Set plot style
sns.set(style="white")

# Create heatmap
plt.figure(figsize=(16, 10))
sns.heatmap(heatmap_data, cmap='YlGnBu', linewidths=0.5, linecolor='gray', annot=False)

# Customize plot
plt.title('NDVI Heatmap (District vs Year)', fontsize=16)
plt.xlabel('Year')
plt.ylabel('District')
plt.tight_layout()
plt.show()
